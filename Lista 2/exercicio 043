program exericicio043;

var n, cont, impar: Integer;
    soma: Longint;
    
    begin
    
    read(n);
    
    cont := 0;
    impar := 1;
    soma := 0;
    
    while cont < n do 
        
        begin
            soma := soma + impar;
            impar := impar + 2;
            cont := cont + 1;
            
        end;
        
    writeln(soma);
end.
