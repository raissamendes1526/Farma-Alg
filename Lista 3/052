{program exercicio052;

var m, cont: Integer;
    numero, soma, media: Real;

begin

    read(m);
    
    cont := 0;
    soma := 0;
    
    while cont <= m do
        begin 
            read(numero);
            soma := soma + numero;
            cont := cont + 1;
        end;
    
  media := soma / m;
  
  writeln(media:0:2)
    
end.}

program exercicio052;

var
  m, cont, numero, soma: Integer;
  media: Real;

begin
  read(m);

  cont := 0;
  soma := 0;

  while cont < m do
  begin
    read(numero);
    soma := soma + numero;
    cont := cont + 1;
  end;

  media := soma / m;
  writeln(media:0:2);  // Mostra com 2 casas decimais
end.
